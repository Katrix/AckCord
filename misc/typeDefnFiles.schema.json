{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AckCord Code generation specifications",
  "description": "A schema for AckCord's code generation files",
  "$ref": "#/definitions/typeDef",
  "definitions": {
    "typeDef": {
      "oneOf": [
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Class",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/classTypeDef"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Enum",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/enumTypeDef"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Opaque",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/opaqueTypeDef"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Request",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/requestDef"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Multiple",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/multipleDefs"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "ObjectOnly",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/objectOnlyDefs"
            }
          ]
        },
        {
          "allOf": [
            {
              "properties": {
                "defType": {
                  "const": "Freeform",
                  "description": "The type of Scala type to generate"
                }
              }
            },
            {
              "$ref": "#/definitions/freeformDefs"
            }
          ]
        }
      ]
    },
    "anonymousClassTypeDefBase": {
      "description": "A anonymous class type definition",
      "type": "object",
      "properties": {
        "defType": true,
        "name": true,
        "documentation": {
          "type": "string",
          "description": "A Scaladoc documentation string to add to the definition"
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "innerTypes": {
          "type": "array",
          "description": "Extra types found in the companion object of this type",
          "items": {
            "$ref": "#/definitions/typeDef"
          }
        },
        "allUndefined": {
          "description": "Sets all the body arguments as withUndefined: true. For patch endpoints.",
          "type": "boolean",
          "default": false
        },
        "fields": {
          "description": "The fields of this class",
          "type": "object",
          "properties": {
            "2.0.x": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "$ref": "#/definitions/fieldDef"
                  }
                ]
              }
            }
          },
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "$ref": "#/definitions/fieldDef"
                }
              ]
            }
          }
        },
        "extends": {
          "description": "The types this class extends",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "objectExtends": {
          "description": "The types this companion object extends",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "fields"
      ],
      "additionalProperties": false
    },
    "anonymousClassTypeDef": {
      "allOf": [
        {
          "$ref": "#/definitions/anonymousClassTypeDefBase"
        },
        {
          "properties": {
            "documentation": true,
            "imports": true,
            "innerTypes": true,
            "allUndefined": true,
            "fields": true,
            "extends": true,
            "objectExtends": true
          },
          "additionalProperties": false
        }
      ]
    },
    "classTypeDef": {
      "description": "A class type definition",
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/anonymousClassTypeDefBase"
        },
        {
          "properties": {
            "defType": true,
            "documentation": true,
            "imports": true,
            "innerTypes": true,
            "allUndefined": true,
            "fields": true,
            "extends": true,
            "objectExtends": true,
            "name": {
              "type": "string",
              "description": "Name of the type"
            }
          },
          "required": [
            "defType",
            "name"
          ],
          "additionalProperties": false
        }
      ]
    },
    "fieldDef": {
      "description": "A field within a class",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/scalaType",
          "description": "The type of the field, as seen from the definition of the field"
        },
        "jsonName": {
          "type": "string",
          "description": "The string key which is used in JSON for this field"
        },
        "default": {
          "type": "string",
          "description": "The default value of this field"
        },
        "documentation": {
          "type": "string",
          "description": "Documentation for the field"
        },
        "withUndefined": {
          "type": "boolean",
          "description": "Specifies if this field is maybe undefined",
          "default": false
        },
        "withNull": {
          "type": "boolean",
          "description": "Specifies if this field is maybe null",
          "default": false
        },
        "isExtension": {
          "type": "boolean",
          "description": "This object extends another object with more fields",
          "default": false
        },
        "verification": {
          "type": "object",
          "description": "Verification for when the object is constructed by hand",
          "properties": {
            "max_length": {
              "type": "integer"
            },
            "min_length": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "enumTypeDef": {
      "description": "A enum type definition",
      "type": "object",
      "properties": {
        "defType": true,
        "name": {
          "type": "string",
          "description": "Name of the type"
        },
        "documentation": {
          "type": "string",
          "description": "A Scaladoc documentation string to add to the definition"
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "innerTypes": {
          "type": "array",
          "description": "Extra types found in the companion object of this type",
          "items": {
            "$ref": "#/definitions/typeDef"
          }
        },
        "type": {
          "$ref": "#/definitions/scalaType",
          "description": "The underlying type of this enum"
        },
        "isBitfield": {
          "type": "boolean",
          "description": "If this enum is a bitfield",
          "default": false
        },
        "values": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "description": "The value of the enum value"
                  },
                  "documentation": {
                    "type": "string",
                    "description": "Documentation for the enum value"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "value"
                ]
              }
            ]
          }
        },
        "objectExtends": {
          "description": "The types this companion object extends",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "defType",
        "name",
        "type",
        "values"
      ],
      "additionalProperties": false
    },
    "opaqueTypeDef": {
      "description": "A opaque type definition",
      "type": "object",
      "properties": {
        "defType": true,
        "name": {
          "type": "string",
          "description": "Name of the type"
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "documentation": {
          "type": "string",
          "description": "A Scaladoc documentation string to add to the definition"
        },
        "underlying": {
          "type": "string",
          "description": "The underlying type of the opaque type"
        },
        "includeAlias": {
          "type": "boolean",
          "description": "If there should be included an alias outside the companion object of this type",
          "default": true
        },
        "innerTypes": {
          "type": "array",
          "description": "Extra types found in the current scope",
          "items": {
            "$ref": "#/definitions/typeDef"
          }
        },
        "objectExtends": {
          "description": "The types this companion object extends",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "defType",
        "name",
        "underlying"
      ],
      "additionalProperties": false
    },
    "requestDef": {
      "description": "A definition for an AckCord request",
      "type": "object",
      "properties": {
        "defType": true,
        "name": {
          "type": "string",
          "description": "Name of the request"
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "documentation": {
          "type": "string",
          "description": "A Scaladoc documentation string to add to the definition"
        },
        "path": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "argOf": {
                    "type": "string",
                    "enum": [
                      "GuildId",
                      "ChannelId",
                      "ApplicationId",
                      "CommandId",
                      "EmojiId",
                      "MessageId",
                      "UserId",
                      "Emoji",
                      "RoleId"
                    ]
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the parameter"
                  },
                  "documentation": {
                    "type": "string",
                    "description": "Docs for this argument"
                  }
                },
                "required": [
                  "argOf"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "customArgType": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the parameter"
                  },
                  "customArgMajorParameter": {
                    "type": "boolean"
                  },
                  "documentation": {
                    "type": "string",
                    "description": "Docs for this argument"
                  }
                },
                "required": [
                  "name",
                  "customArgType"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "method": {
          "type": "string",
          "description": "The HTTP method for this endpoint",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "PATCH"
          ]
        },
        "query": {
          "$ref": "#/definitions/anonymousClassTypeDef"
        },
        "arrayOfBody": {
          "type": "boolean",
          "description": "If the body type is an array of the body specified"
        },
        "body": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/anonymousClassTypeDef"
            }
          ]
        },
        "parseResponse": {
          "type": "string",
          "description": "Content of the parseResponse request parameter",
          "x-intellij-language-injection": {
            "language": "Scala"
          }
        },
        "arrayOfReturn": {
          "type": "boolean",
          "description": "If the return type is an array of the return specified"
        },
        "return": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/anonymousClassTypeDef"
            }
          ]
        },
        "allowsReason": {
          "type": "boolean",
          "description": "If this requests allows to set the audit log reason",
          "default": false
        },
        "additionalTypeParams": {
          "type": "array",
          "description": "Type parameters to place on the def",
          "items": {
            "$ref": "#/definitions/scalaType"
          }
        },
        "additionalParams": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "$ref": "#/definitions/scalaType"
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "$ref": "#/definitions/scalaType"
                  },
                  "default": {
                    "type": "string",
                    "description": "Default value of this parameter"
                  }
                },
                "additionalProperties": false,
                "required": ["type"]
              }
            ]
          }
        },
        "complexType": {
          "type": "object",
          "properties": {
            "R1": {
              "$ref": "#/definitions/scalaType"
            },
            "R2": {
              "$ref": "#/definitions/scalaType"
            }
          },
          "additionalProperties": false
        },
        "encodeBody": {
          "type": "string",
          "description": "Scala code for EncodeBody"
        }
      },
      "required": [
        "defType",
        "name",
        "path",
        "method"
      ],
      "additionalProperties": false
    },
    "multipleDefs": {
      "description": "A definition for multiple entries at the same scope",
      "type": "object",
      "properties": {
        "defType": true,
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "innerTypes": {
          "type": "array",
          "description": "Extra types found in the current scope",
          "items": {
            "$ref": "#/definitions/typeDef"
          }
        }
      },
      "required": [
        "defType",
        "innerTypes"
      ],
      "additionalProperties": false
    },
    "objectOnlyDefs": {
      "description": "A definition for a companion object only",
      "type": "object",
      "properties": {
        "defType": true,
        "name": {
          "type": "string",
          "description": "Name of the object"
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "innerTypes": {
          "type": "array",
          "description": "Extra types found in the current scope",
          "items": {
            "$ref": "#/definitions/typeDef"
          }
        },
        "objectExtends": {
          "description": "The types this object extends",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "defType",
        "innerTypes"
      ],
      "additionalProperties": false
    },
    "freeformDefs": {
      "description": "A definition that can be anything. Inserts a string directly into the generated code",
      "type": "object",
      "properties": {
        "defType": true,
        "content": {
          "type": "string",
          "description": "The string to insert into the code",
          "x-intellij-language-injection": {
            "language": "Scala"
          }
        },
        "imports": {
          "type": "array",
          "description": "Imports to add to this file",
          "items": {
            "type": "string"
          }
        },
        "documentation": {
          "type": "string",
          "description": "A Scaladoc documentation string to add to the definition"
        }
      },
      "required": [
        "defType"
      ],
      "additionalProperties": false
    },
    "scalaType": {
      "anyOf": [
        {
          "type": "string",
          "examples": [
            "Int",
            "String"
          ]
        },
        {
          "type": "string",
          "$comment": "Purely here to provide completion for commonly used types. Feel free to add onto this array, although do add them to the examples array too",
          "enum": [
            "Int",
            "String",
            "Boolean",
            "RawSnowflake",
            "Snowflake",
            "OffsetDateTime"
          ]
        }
      ]
    }
  }
}